@model IEnumerable<Species>

<div class="container d-flex flex-wrap pt-3 gap-3 justify-content-center align-items-center">
	@if (Model == null || Model.Count()<1)
	{
		<h1>There are no Species in this Animal Group</h1>
	}

	else
	{
		@foreach (var species in Model)
		{
			<div class="card d-flex justify-content-between align-items-center p-2" style="width:300px; height:350px">
				<a class="nav-link text-dark text-center" asp-area="" asp-controller="Breeds" asp-action="Index" asp-route-SpeciesId="@species.Id">
					<img class="card-img" src="@species.Image" />
					<h2>@species.Name</h2>

					@if (species.Breeds != null)
					{
						<small>Has @species.Breeds.Count() breeds</small>
					}
					else
					{
						<small>Has 0 breeds</small>
					}
				</a>
				<div class="d-flex justify-content-center gap-2 w-100">
					<a class="btn btn-primary" asp-controller="Species" asp-action="Edit" asp-route-Id="@species.Id">Edit</a>
					<a class="btn btn-danger" asp-controller="Species" asp-action="Delete" asp-route-Id="@species.Id">Delete</a>
				</div>
			</div>

		}
	}
	
</div>