@model IEnumerable<Pets>


@if (Model == null)
{
	<h1>Not Found</h1>
}

else
{
	
		<div>
			@foreach(var pet in Model)
			{
				<a class="nav-link text-dark" asp-area="" asp-controller="Species" asp-action="Index">
					<img width="300" height="200" src="@pet.Image" />
					<h2>@pet.AnimalType</h2>
					<small>Has @pet.Species.Count() species</small>
					<p>@pet.Description</p>
				</a>
			}
		</div>
}
