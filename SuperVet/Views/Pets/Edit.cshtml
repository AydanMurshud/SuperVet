@using SuperVet.ViewModels
@model EditPetsViewModel
<form method="post" asp-action="Edit">
	<div class="form-group">
		<label asp-for="AnimalType">Animal Group</label>
		<input asp-for="AnimalType" class="form-control" placeholder="Animal Group" />
		<span asp-validation-for="AnimalType" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description">Description</label>
		<input asp-for="Description" class="form-control" placeholder="Description" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Image">Image URL</label>
		<input asp-for="Image" class="form-control" placeholder="Image URL" />
		<span asp-validation-for="Image" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>